<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    @if (String.IsNullOrWhiteSpace(ViewBag.Title))
    {
        <title>Liberty Action Network</title>
    }
    else
    {
        <title>@ViewBag.Title - Liberty Action Network</title>
    }
    <meta name="description" content="Liberty Action Network organize and distribute information to activists." />
    <link href="@Url.Content("~/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        .center {
            float: none;
            margin-left: auto;
            margin-right: auto;
        }
    </style>
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="@Url.Content("~/Scripts/html5shiv.js")"></script>
    <![endif]-->
</head>
<body>

    @*sticky footer*@
    <div id="wrap">

        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" href="/" style="padding: 4px; padding-top: 8px;">
                        <img style="margin-top: -4px;" src="@Url.Content("~/Images/LibertyActionNetworkLogo_32.png")" alt="Liberty Action Network" />
                        Liberty Action Network</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li><a href="/">Home</a></li>
                            <li><a href="/Voter">Voters</a></li>
                            @if (ViewBag.IsAdmin)
                            {
                                <li><a href="/Admin">Admin</a></li>
                            }
                        </ul>

                        @if (Request.IsAuthenticated)
                        {
                            <form class="navbar-form pull-right" id="logoutForm" action="/Account/Logoff" method="post">
                                @Html.AntiForgeryToken()
                                <p class="muted" style="margin: 0; padding: 10px;"><a href="/Account/Manage" title="Manage Account">@User.Identity.Name</a>&nbsp;|&nbsp;<a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></p>
                            </form>
                        }
                        else
                        {
                            <form class="navbar-form pull-right">
                                <p class="muted" style="margin: 0; padding: 10px;"><a href="/Account/Login">Log in</a></p>
                            </form>
                        }
                    </div>
                    <!--/.nav-collapse -->
                </div>
            </div>
        </div>

        <div class="container">
            <div class="navbarspacer">&nbsp;</div>
            @RenderBody()
            @*sticky footer*@
            <div id="push"></div>
        </div>
    </div>

    @*sticky footer*@
    <div id="footer">
        <div class="container">
            <p class="muted credit" style="margin: 0; padding: 6px; font-size: 8pt;">Copyright &copy; @DateTime.Now.Year <a style="color: #999999;" href="http://www.libertyiowa.com/">Liberty Iowa</a>. All rights reserved.</p>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", false)
</body>
</html>
